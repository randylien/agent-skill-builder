{
  "tasks": {
    "dev": "deno run --allow-read --allow-write src/main.ts",
    "build": "deno compile --allow-read --allow-write --output ./dist/skill-builder src/main.ts",
    "test": "deno test --allow-read --allow-write"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "deno.window"]
  }
}
